<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".eventCreation.TitleDescAndSubjectFragment">

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="12dp"
        android:hint="Event Title"
        android:maxLines="1" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleEditText"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:hint="Event Description"
        android:maxLines="8" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allSubjectsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Select a Subject"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allSubjectsRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Selected Subject" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectedSubjectRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectedSubjectRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Select New Subject from List Above to Edit"
        android:textSize="10sp" />

</RelativeLayout>