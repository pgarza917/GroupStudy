<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".profile.EditProfileFragment">


    <EditText
        android:id="@+id/editDisplayNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfilePictureImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="New Display Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDisplayNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editBioEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPasswordEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Tell Us About Yourself"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/editProfilePictureImageButton"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:backgroundTint="#FFFFFF"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/imageEditTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfilePictureImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Click Image To Edit"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/yourTagsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editBioEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Your Tags" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/yourTagsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/yourTagsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/addTagsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourTagsRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Select Tags to Add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addTagsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/addTagsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" />

</RelativeLayout>