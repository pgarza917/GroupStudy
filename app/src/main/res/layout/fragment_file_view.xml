<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".eventCreation.files.FileViewFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/uploadedFilesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalDivider1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/createGoogleDocTextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/googleDocsImageButton"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="76dp"
        android:layout_toStartOf="@+id/takePhotoTextView"
        android:text="Create Google Drive File"
        android:textColor="#B1B2B8"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/uploadFilesImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/takePhotoImageButton"
        android:backgroundTint="#FFFFFF"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:src="@drawable/ic_outbox" />

    <TextView
        android:id="@+id/takePhotoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/takePhotoImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp"
        android:text="Take a Photo"
        android:textColor="#B1B2B8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/uploadFilesTextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadFilesImageButton"
        android:layout_marginStart="78dp"
        android:layout_marginTop="-18dp"
        android:layout_toEndOf="@+id/takePhotoTextView"
        android:text="Upload Files"
        android:textAlignment="viewEnd"
        android:textColor="#B1B2B8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fileViewHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createGoogleDocTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Files for this Event"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/takePhotoImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic_ar_camera"
        android:tint="#0A2850" />

    <ImageButton
        android:id="@+id/googleDocsImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="58dp"
        android:layout_toStartOf="@+id/takePhotoImageButton"
        android:backgroundTint="#FFFFFF"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/ic_iconfinder__google_save_to_drive_2006460"
        android:tint="#0A2950" />

    <ProgressBar
        android:id="@+id/fileViewProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />

    <View
        android:id="@+id/horizontalDivider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fileViewHeaderTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/verticalDividerLeft"
        android:layout_width="1dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/takePhotoImageButton"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/verticalDividerRight"
        android:layout_width="1dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/takePhotoImageButton"
        android:background="?android:attr/listDivider" />

</RelativeLayout>